<h2>Listing teams</h2>

<table class='table-striped' border="1" cellspacing="5" cellpadding="5">
  <tr>
    <th>Team Name</th>
    <th>Actions </th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= link_to team.name, team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %>
    <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team', new_team_path %>
